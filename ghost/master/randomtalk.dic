RandomTalk
{
	if meltphase < 3
	{		
		_script = ToMeltCase("Things That Are Cold: ")
		for _i = 0; _i < 3; _i++
		{
			_script += "\w8\n%(bullet) "
			if CurrentNeedlePokes >= 1
			{
				_script += ToMeltCase("Poking Someone")
				CurrentNeedlePokes--
			}
			elseif CurrentRefusals >= 1
			{
				_script += ToMeltCase("You")
				CurrentRefusals--
			}
			else; _script += ToMeltCase(ThingsThatAreCold)
		}
		_script += "\![is-aitalk]"
		_script
		CurrentNeedlePokes = 0
		CurrentRefusals = 0
	}
}

ToMeltCase
{
	_input = _argv[0]
	if meltphase == 2; TOLOWER(_input)
	elseif meltphase == 0; TOUPPER(_input)
	else; _input
}

