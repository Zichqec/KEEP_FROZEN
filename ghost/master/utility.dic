//Take minutes and turn it into an hours:minutes display
FormatTime
{
	_mins = _argv[0] / 60
	_hours = _mins / 60
	_minutes = TOSTR(_mins % 60)
	
	if STRLEN(_minutes) < 2; _minutes = "0" + _minutes
	
	"%(_hours):%(_minutes)"
}

SumArray
{
	_sum = 0
	foreach _argv; _num
	{
		_sum += _num
	}
	_sum
}

